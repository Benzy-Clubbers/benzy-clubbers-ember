{{page-title "Benzy Clubbers - Home Page"}}

<h1 style="text-align: center; color: rgb(231, 231, 231); font-weight: bold; border-bottom: 1px solid #E3E3E3; padding-top: 1%; padding-bottom: 2%; max-width: 90%; margin: auto;">2021 Mercedes-Benz Lineup</h1>

{{!-- Separate 4 car body types into sections --}}

<h1 style="text-align: center; border-bottom: 1px solid gray; padding-top: 1%; max-width: 70%; margin: auto;">SUVs</h1>
<div class="container d-flex justify-content-center" style="max-width: 70%;">
    <div class="card-deck justify-content-around fade2">
        {{#each this.model as |car|}}
            {{#if (eq car.body_type 'SUVs')}}
            <div class="spacing">
                <FrontPageCard @car={{car}}/>
            </div>
            {{/if}}
        {{/each}}
    </div>
</div>

